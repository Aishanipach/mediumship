{
    "name": "Mediumship",
    "version": "2.2",
    "description": "Read all Medium stories for free.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png"
        },
        "default_title": "Read the full story!"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "<all_urls>"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "mediumship@swap",
            "update_url": "https://raw.githubusercontent.com/swapagarwal/mediumship/master/firefox/web-ext-artifacts/updates.json"
        }
    }
}
